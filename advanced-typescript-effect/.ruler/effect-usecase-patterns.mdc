      featured: blogPost.featured,
      boost: blogPost.boost,
      publishedAt: blogPost.publishedAt,
    })

    return blogPostProfile
  }).pipe(
    Effect.tapError(Effect.logError),
    Effect.withSpan('getBlogByIdUsecase', { 
      attributes: { blogPostId: id } 
